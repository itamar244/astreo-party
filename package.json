{
	"version": "0.0.1",
	"description": "a multiplayer replica of the mobile game Astro Party",
	"repository": "https://github.com/itamar244/astreo-party.git",
	"author": "Itamar Yatom <itamary24@gmail.com>",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev:app": "webpack-dev-server --config scripts/webpack.config.js",
		"dev:server": "ts-node-dev packages/server/index.ts",
		"dev": "npm-run-all -p dev:app dev:server",
		"format": "yarn prettier --write ./scripts/**.js ./packages/**/*.ts"
	},
	"devDependencies": {
		"html-webpack-plugin": "^3.2.0",
		"npm-run-all": "^4.1.3",
		"prettier": "^1.13.6",
		"ts-loader": "^4.4.1",
		"ts-node-dev": "^1.0.0-pre.26",
		"typescript": "^2.9.2",
		"webpack": "^4.12.1",
		"webpack-cli": "^3.0.8",
		"webpack-dev-server": "^3.1.4"
	}
}
